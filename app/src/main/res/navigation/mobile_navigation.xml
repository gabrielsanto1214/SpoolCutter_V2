<!-- mobile_navigation.xml -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.PI.spoolcutter.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_chart"
        android:name="com.PI.spoolcutter.ui.dashboard.DashboardFragment"
        android:label="@string/title_chart"
        tools:layout="@layout/fragment_dashboard" />


    <fragment
        android:id="@+id/navigation_login"
        android:name="com.PI.spoolcutter.ui.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.PI.spoolcutter.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />



</navigation>
